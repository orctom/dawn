        <article class="post">
          <div class="well">
            <h1>
              <a href="<%- config.root %><%- post.path %>" title="<%- post.title %>"><%- post.title %></a>
            </h1>
            <% if(post.tags && post.tags.length){ %><%- list_tags(post.tags, { show_count: false, class: 'article-tag', style: ""}) %> <% } %>
            <% if(post.description){ %>
              <p><%- post.description %></p>
            <% } else if(post.excerpt){ %>
              <p><%= strip_html(post.excerpt).replace(/^\s*/, '').replace(/\s*$/, '').substring(0, 140) %></p>
            <% } else {%>
              <p><%= strip_html(post.content).replace(/^\s*/, '').replace(/\s*$/, '').substring(0, 140) %></p>
            <% } %>

            <p class="say-title">
                <%- post.date.format(config.date_format) %>
            </p>
          </div>
        </article>
